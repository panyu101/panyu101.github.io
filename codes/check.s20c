#!/bin/bash

LOAD=$(ssh s20c uptime|cut -d"," -f4-6|sed 's|load average:||1')

curl -i -XPOST "http://localhost:8086/write?db=system" --data-binary "s20c \
load1=$(echo $LOAD|cut -d"," -f1|xargs),\
load5=$(echo $LOAD|cut -d"," -f2|xargs),\
load15=$(echo $LOAD|cut -d"," -f3|xargs),\
tcp4=$(ssh s20c netstat -t|wc -l|xargs),\
ssh=$(ssh s20c netstat -t|grep ssh|wc -l|xargs),\
http=$(ssh s20c netstat -t|grep http|wc -l|xargs),\
ip=\"$(ssh s20c ifconfig|grep 192.168.0.|awk '{print $2}'|xargs)\""
