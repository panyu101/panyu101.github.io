#!/bin/bash

if [[ $# -ne 2 ]]
  then
    echo -e "is.it.a.pair.key\tPRIVATE_KEY\tPUBLIC_KEY"
    exit 1
fi

PRIVATE_KEY=$1
PUBLIC_KEY=$2

cat $PUBLIC_KEY|awk '{print $1" "$2}' > public.key
ssh-keygen -y -f $PRIVATE_KEY > private.key
if [ not `diff private.key public.key` ]
  then
    echo "$PRIVATE_KEY and $PUBLIC_KEY is a pair ssh-rsa key"
  else
    echo "NO, it's NOT a pair"
fi

rm -f {private.key,public.key}
